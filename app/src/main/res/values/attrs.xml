<resources>

  <declare-styleable name="BaseTheme">
    <attr name="actionBarInsetStart" format="dimension" />
    <attr name="spinnerBarInsetStart" format="dimension" />
  </declare-styleable>

  <declare-styleable name="SpecialEvent">
    <attr name="specialEventDrawerIcon" format="reference" />
    <attr name="specialEventDefaultIcon" format="reference" />
    <attr name="specialEventLogo" format="reference" />
    <attr name="specialEventTitle" format="reference|string" />
    <attr name="specialEventDescription" format="reference|string" />
  </declare-styleable>
  
  <declare-styleable name="FloatLabelLayout">
    <attr name="floatLabelTextAppearance" format="reference" />
    <attr name="floatLabelPaddingLeft" format="reference|dimension" />
    <attr name="floatLabelPaddingRight" format="reference|dimension" />
    <attr name="floatLabelPaddingTop" format="reference|dimension" />
    <attr name="floatLabelPaddingBottom" format="reference|dimension" />
    <!-- The hint to display in the floating label -->
    <attr name="floatLabelHint" format="reference|string" />
  </declare-styleable>
</resources>
