<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ActionBarThemeOverlay" parent="">
    <item name="android:textColorPrimary">@color/white</item>
    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlHighlight">#3fff</item>
  </style>

  <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="Widget.GDG.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar"/>

  <style name="Widget.GDG.Spinner" parent="Widget.GDG.Spinner.Base">
    <item name="android:theme">@style/ActionBarThemeOverlay</item>
  </style>

  <style name="Widget.GDG.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
    <item name="android:dropDownSelector">?android:selectableItemBackground</item>
  </style>

  <style name="Widget.GDG.ListView.DropDown" parent="Widget.AppCompat.Light.ListView.DropDown">
    <item name="android:listSelector">?android:selectableItemBackground</item>
    <item name="android:divider">@null</item>
    <item name="android:dividerHeight">0dp</item>
  </style>

  <style name="TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
    <item name="android:textColor">@color/asbestos</item>
  </style>

  <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/theme_accent_1</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="TextAppearance.GDG.FloatLabel" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">?colorAccent</item>
  </style>

  <style name="Widget.GDG.TabLayout" parent="Widget.Design.TabLayout">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="android:background">?colorPrimary</item>
    <item name="tabIndicatorColor">@color/white</item>
  </style>

  <style name="GoogleSignIn" parent="android:style/Widget.Button">
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingLeft">65dip</item>
    <item name="android:paddingRight">25dip</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="CardView.Default" parent="CardView">
    <item name="android:layout_margin">@dimen/keyline_1_minus_8dp</item>
    <item name="cardCornerRadius">2dp</item>
    <item name="cardElevation">4dp</item>
    <item name="cardUseCompatPadding">true</item>
  </style>

  <style name="Widget.GDG.TextView.CardHeader" parent="android:style/Widget.TextView">
    <item name="android:paddingLeft">@dimen/keyline_1_twice</item>
    <item name="android:paddingRight">@dimen/keyline_1_twice</item>
    <item name="android:paddingTop">@dimen/keyline_1</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
